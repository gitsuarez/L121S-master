{
  "manifest_version": 2,
  "name": "Live Helper Chat",
  "description": "Monitor chat requests from Live Helper Chat without opening a chat",
  "version": "1.2",
  "permissions": [
    "idle"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  }
}